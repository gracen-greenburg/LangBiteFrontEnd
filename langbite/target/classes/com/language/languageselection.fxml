<?xml version="1.0" encoding="UTF-8"?> 

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxWidth="400" prefHeight="700.0" prefWidth="400.0" spacing="10.0" 
      style="-fx-padding: 20 0 0 0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.controllers.LanguageSelectionController">

    <!-- Header Section -->
    <Label style="-fx-font-size: 40px; -fx-font-family: Arial; -fx-text-fill: #649a38; -fx-font-weight: bold;" 
           styleClass="title" 
           stylesheets="@styles.css" 
           text="Languages">
        <font>
            <Font size="40.0" />
        </font>
    </Label>

    <!-- French Language Card (Active/Selected Language) -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #649a38; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <ImageView fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/frenchflag.png" />
            </image>
        </ImageView>
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: white;" 
               text="French" />
    </HBox>

    <!-- Spanish Language Card  -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="Spanish" />
    </HBox>

    <!-- German Language Card  -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="German" />
    </HBox>

    <!-- Italian Language Card  -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="Italian" />
    </HBox>

    <!-- Japanese Language Card -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="Japanese" />
    </HBox>

    <!-- Arabic Language Card -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="Arabic" />
    </HBox>

    <!-- Korean Language Card -->
    <HBox alignment="CENTER_LEFT" spacing="10" 
          style="-fx-background-color: #D3D3D3; 
                 -fx-padding: 10; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10;">
        <Label style="-fx-font-size: 16px; -fx-font-family: Arial; -fx-font-weight: bold; -fx-text-fill: #808080;" 
               text="Korean" />
    </HBox>

    <!-- Add Language Button -->
   <Button fx:id="addLanguageButton" onAction="#handleAddLanguage" 
           style="-fx-background-color: #649a38; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" 
           stylesheets="@styles.css" 
           text="Add Language" />
</VBox>