<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.controllers.TakeABreakController">
    <children>
        <ImageView textAlignment="CENTER" fx:id="gatorImageView" fitWidth="100" fitHeight="100" />
        <Button fx:id="homeButton" text="End Break" layoutX="20" layoutY="20" maxWidth="-Infinity" prefWidth="250.0" styleClass="button" stylesheets="@styles.css" onAction="#handleHomeButtonClick">
         <AnchorPane.bottomAnchor>10.0</AnchorPane.bottomAnchor>
        <AnchorPane.leftAnchor>10.0</AnchorPane.leftAnchor>
        </Button>
         <HBox alignment="CENTER" layoutY="10" prefWidth="250">
            <children>
                <Label fx:id="scoreLabel" text="Coins: 0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <AnchorPane.topAnchor>10.0</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
        <!-- Coins added in controller -->
    </children>
</AnchorPane>
