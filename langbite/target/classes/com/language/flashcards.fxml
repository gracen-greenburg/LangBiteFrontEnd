<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8" alignment="CENTER" spacing="10" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css">
    <!-- Header -->
    <Label text="Flashcards" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <!-- Card Section -->
    <VBox alignment="CENTER" spacing="10" style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 20;" prefHeight="200.0" prefWidth="400.0">
        <Label text="Bread" style="-fx-font-size: 18px;" />
    </VBox>
    
    <!-- Navigation Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Shuffle" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
        <Button text="Back" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
        <Button text="Next" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
    </HBox>
</VBox>