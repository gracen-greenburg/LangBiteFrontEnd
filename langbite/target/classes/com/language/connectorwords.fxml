<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxWidth="400" prefHeight="700.0" prefWidth="400.0" spacing="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.GrammarQuestionController">
   
    <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
            <Image url="@images/connectorWords.png" />
    </ImageView>
    <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand; -fx-padding: 20 0 0 0">
            <Image url="@images/confusedgator.png" />
    </ImageView>

    <VBox alignment="CENTER" spacing="30">
   <Label fx:id="questionLabel" style="-fx-font-size: 20px; -fx-padding: 30 0 30 0" styleClass="normal_black_text" stylesheets="@styles.css" text="This is a Question" wrapText="true" />
   </VBox>

   <VBox alignment="CENTER" spacing="10">
   <HBox alignment="CENTER" spacing="10">
   <Button style="-fx-cursor: hand; -fx-padding: 10 0 10 0" styleClass="button" stylesheets="@styles.css" text="answerChoice1" />
   <Button style="-fx-cursor: hand; -fx-padding: 10 0 10 0" styleClass="button" stylesheets="@styles.css" text="answerChoice2" />
   </HBox>
   <HBox alignment="CENTER" spacing="10">
       <Button style="-fx-cursor: hand; -fx-padding: 10 0 10 0" styleClass="button" stylesheets="@styles.css" text="answerChoice3" />
       <Button style="-fx-cursor: hand; -fx-padding: 10 0 10 0" styleClass="button" stylesheets="@styles.css" text="answerChoice4" />
   </HBox>
    </VBox>
</VBox>
