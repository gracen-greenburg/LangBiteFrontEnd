<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="400.0" spacing="15" style="-fx-background-color: #f5f5f5;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.FlashcardsController">
    <!-- Header Section -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #649a38; -fx-padding: 15; -fx-border-radius: 10;">
        <ImageView fx:id="backArrowImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" onMouseClicked="#goHomePage">
            <image>
                <Image url="@images/backarrow.png" />
            </image>
        </ImageView>
        <Region HBox.hgrow="ALWAYS" />
        <Label style="-fx-font-size: 53px; -fx-text-fill: white;" styleClass="title" text="Flashcards" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Progress Section -->
    <Label styleClass="label" text="1/20" />

    <!-- Flashcard Section -->
    <StackPane alignment="CENTER" prefHeight="198.0" prefWidth="408.0" style="-fx-border-color: #578631; -fx-border-width: 2; -fx-border-radius: 10; -fx-padding: 15;">
        <Label fx:id="currentWord" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #808080;" text="Bread" />
        <ImageView fx:id="refreshImageView" onMouseClicked="#handleToggle" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" StackPane.alignment="BOTTOM_RIGHT">
            <image>
                <Image url="@images/refresh1.png" />
            </image>
        </ImageView>
    </StackPane>

    <!-- Shuffle Button -->
    <Button styleClass="button" text="Shuffle" onAction="#handleShuffle" style="-fx-cursor: hand;" />

    <!-- Navigation Buttons -->
    <HBox alignment="CENTER" spacing="50" style="-fx-padding: 0 0 30 0;">
        <Button styleClass="button" text="Back" onAction="#handleBack" style="-fx-cursor: hand;" />
        <Button styleClass="button" text="Next" onAction="#handleNext" style="-fx-cursor: hand;" />
    </HBox>

    <!-- Footer Navigation Hub -->
    <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0" spacing="40" style="-fx-background-color: #649a38; -fx-padding: 3; -fx-border-radius: 0;" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="storeImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/store_icon.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Store" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="settingsImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/settings_icon.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Settings" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="homeImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/home_icon.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Home" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="favoritesImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/favorites_icon.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Favorites" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <ImageView fx:id="profileImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/profile_icon.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 13px;" text="Profile" />
        </VBox>
    </HBox>
</VBox>
