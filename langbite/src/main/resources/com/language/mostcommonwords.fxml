<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Cursor?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.HundredMostCommonWordsController" stylesheets="@styles.css">
    <VBox alignment="TOP_CENTER" maxWidth="400" prefHeight="700.0" prefWidth="400.0" spacing="20.0">

        <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="false" style="-fx-cursor: hand;">
            <Image url="@images/100mostcommonwords.png" />
        </ImageView>
        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand; -fx-padding: 20 0 0 0">
            <Image url="@images/confusedgator.png" />
        </ImageView>

        <!-- Question Label -->
        <VBox alignment="CENTER" spacing="30">
            <Label fx:id="questionLabel" style="-fx-font-size: 20px; -fx-padding: 30 0 20 0" styleClass="normal_black_text" stylesheets="@styles.css" text="This is a Question" wrapText="true" />
        </VBox>

        
        <VBox fx:id="answerChoicesBox" alignment="CENTER" spacing="10">
           
        </VBox>

        <!-- Next Question -->
        <Button fx:id="nextButton" maxWidth="-Infinity" prefWidth="250.0" styleClass="button" stylesheets="@styles.css" text="Next Question" onAction="#handleNextQuestion" disable="true">
            <cursor>
                <Cursor fx:constant="OPEN_HAND" />
            </cursor>
        </Button>
    </VBox>
</StackPane>